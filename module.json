{
  "name": "Shure SLX-D",
  "type": "TCP Client",
  "path": "Hardware",

  "version": "1.3",
  "description": "Monitor and Control Shure SLX-D wireless systems",
  "url": "https://github.com/ziginfo/Shure-SLXD-Chataigne-Module",
  "downloadURL": "https://github.com/ziginfo/Shure-SLXD-Chataigne-Module/archive/refs/heads/main.zip",

  "hasInput": true,
  "hasOutput": true,

  "hideDefaultCommands": true,

  "defaults": {
    "autoAdd": false,
    "protocol": "Direct",
    "output": {
      "local": false,
       "remoteHost" : "",
      "remotePort": 2202
    }
  },

  "parameters": {
    "Update Rate Ch 1": {
      "type": "Enum",
      "description": "Select the Update Rate for constantly changing infos (RF Signal Level, Audio Signal Level)",
      "options": {
    		"no Updates": "00000",
            "very slow (15sec)": "15000",
            "slow (5sec)": "05000",
            "medium (2,5sec)": "02500",
            "fast (1sec)": "01000",
            "faster (0,5sec)": "00500",
            "very fast (0.2sec)": "00200",
            "fastest (0,1sec)": "00100"
      }
    },
    "Update Rate Ch 2": {
      "type": "Enum",
      "description": "Select the Update Rate for constantly changing infos (RF Signal Level, Audio Signal Level)",
      "options": {
    		"no Updates": "00000",
            "very slow (15sec)": "15000",
            "slow (5sec)": "05000",
            "medium (2,5sec)": "02500",
            "fast (1sec)": "01000",
            "faster (0,5sec)": "00500",
            "very fast (0.2sec)": "00200",
            "fastest (0,1sec)": "00100"
      }
    }
  },

  "hideDefaultParameters": [
    "autoAdd",
    "protocol",
    "messageStructure",
    "customSeparator",
    "firstValueIsTheName",
    "output/local",
    "output/remotePort",
    "pass_through",
    "receiveFrequency"
  ],

  "scripts": ["slxd.js"],

  "values": {
  },

  "commands": {
  
    
    "set Flash": {
      "menu": "",
      "callback": "setFlashing",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 0,
          "max": 2,
          "default": 0,
          "description": "use 0 to flash the whole receiver"
        }
      }
    },
    	"send String": {
      "menu": "",
      "callback": "sendLine",
      "parameters": {    
        "Command Line": {
          "type": "String",
          "default": "< INSERT THE COMMAND HERE >",
          "multiline" : true
        }
      }
    },
    "set Transmitter Name": {
      "menu": "Controls",
      "callback": "setDeviceID",
      "parameters": {
        "Receiver ID": {
          "type": "String"
        }
      }
    },
    "set Channel Name": {
      "menu": "Controls",
      "callback": "setChannelName",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 1,
          "max": 2,
          "default": 1
        },
        "new Name": {
          "type": "String"
        }
      }
    },
    "set Audio Gain": {
      "menu": "Controls",
      "callback": "setAudioGain",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 1,
          "max": 2,
          "default": 1
        },
        "Gain": {
          "type": "Integer",
          "min": -18,
          "max": 42,
          "default": 0
        }
      }
    },
    "increase Audio Gain": {
      "menu": "Controls",
      "callback": "incAudioGain",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 1,
          "max": 2,
          "default": 1
        },
        "Gain increase": {
          "type": "Integer",
          "min": 0,
          "max": 10,
          "default": 1
        }
      }
    },
    "decrease Audio Gain": {
      "menu": "Controls",
      "callback": "decAudioGain",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 1,
          "max": 2,
          "default": 1
        },
        "Gain reduction": {
          "type": "Integer",
          "min": 0,
          "max": 10,
          "default": 1
        }
      }
    },
    "Update all Values": {
      "menu": "Requests",
      "callback": "getAll"
    },
    "Requests": {
      "menu": "Requests",
      "callback": "requests",
      "parameters": {
        "Rate": {
          "type": "Enum",
          "options": {
            "get All": "< GET 0 ALL >",
            "get RF Level": "< GET 0 RSSI >",
            "get Audio Level RMS": "< GET 0 AUDIO_LEVEL_RMS >",
            "get Audio Level Peak": "< GET 0 AUDIO_LEVEL_PEAK >",
            "get Audio Gain": "< GET 0 AUDIO_GAIN >",
            "get Battery Bars": "< GET 0 TX_BATT_BARS >",
            "get Transmitter Name": "< GET 0 TX_MODEL >",
            "get Channel Name": "< GET 0 CHAN_NAME >",
            "get Firmware": "< GET FW_VER >",
            "get RF Band": "< GET RF_BAND >",
            "get Lock Status": "< GET LOCK_STATUS >",
            "get Frequency": "< GET 0 FREQUENCY >",
            "get Group&Channel": "< GET 0 GROUP_CHANNEL >"  }  }
      }
    },
    "Set Meter Rate": {
      "menu": "Requests",
      "callback": "setMeterRate",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 1,
          "max": 2,
          "default": 1
        },
        "Rate": {
          "type": "Enum",
          "options": {
            "no Updates": "00000",
            "very slow (15sec)": "15000",
            "slow (5sec)": "05000",
            "medium (2,5sec)": "02500",
            "fast (1sec)": "01000",
            "faster (0,5sec)": "00500",
            "very fast (0.2sec)": "00200",
            "fastest (0,1sec)": "00100"
          }
        }
      }
    }
  }
}
