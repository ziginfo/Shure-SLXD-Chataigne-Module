{
  "name": "Shure QLX-D",
  "type": "TCP Client",
  "path": "Hardware",

  "version": "1.0.0",
  "description": "BETA - Monitor and Control Shure SLX-D wireless microphone receivers",
  "url": "https://github.com/ziginfo/Shure-QLXD-Chataigne-module",
  "downloadURL": "https://github.com/ziginfo/Shure-QLXD-Chataigne-module/archive/refs/heads/main.zip",

  "hasInput": true,
  "hasOutput": true,

  "hideDefaultCommands": false,

  "defaults": {
    "autoAdd": false,
    "protocol": "Direct",
    "output": {
      "local": false,
      "remoteHost" : "192.168.50.78",
      "remotePort": 2202
    }
  },

  "parameters": {
    "Update Rate Ch 1": {
      "type": "Enum",
      "description": "Select the Update Rate for constantly changing infos (RF Signal Level, Audio Signal Level)",
      "options": {
        "no Updates": "00000",
        "very slow (15sec)": "15000",
        "slow (5sec)": "05000",
        "medium (2,5sec)": "02500",
        "fast (1sec)": "01000",
        "very fast (0.1sec)": "00100"
      }
    },
    "Update Rate Ch 2": {
      "type": "Enum",
      "description": "Select the Update Rate for constantly changing infos (RF Signal Level, Audio Signal Level)",
      "options": {
        "no Updates": "00000",
        "very slow (15sec)": "15000",
        "slow (5sec)": "05000",
        "medium (2,5sec)": "02500",
        "fast (1sec)": "01000",
        "very fast (0.1sec)": "00100"
      }
    }
  },

  "hideDefaultParameters": [
    "autoAdd",
    "protocol",
    "messageStructure",
    "customSeparator",
    "firstValueIsTheName",
    "output/local",
    "output/remotePort",
    "pass_through",
    "receiveFrequency"
  ],

  "scripts": ["shure_qlxd.js"],

  "values": {
    "Device": {
      "type": "Container",
      "collapsed": false,
      "flashing": {
        "type": "Boolean",
        "default": false
      },
      "Model Name": {
        "type": "String",
        "readOnly": true
      },
      "Device ID": {
        "type": "String",
         "readOnly": true
      },
      "MAC Address": {
        "type": "String",
         "readOnly": true
      },
      "RF Band": {
        "type": "String",
        "readOnly": true
      },
      "Lock Status": {
        "type": "Enum",
        "options": {
          "OFF": "OFF",
          "MENU": "MENU",
          "ALL": "ALL"
        },
        "readOnly": true
      },
      "FW Version": {
        "type": "String",
        "readOnly": true
      }
    },
    "Channel 1": {
      "type": "Container",
      "collapsed": false,
      "flashing": {
        "type": "Boolean",
        "default": false
      },
      
      "Name": {
        "type": "String",
         "readOnly": true
      },
      "Transmitter": {
        "type": "String",
         "readOnly": true
      },
      "Audio Gain": {
        "type": "String",
        "readOnly": true
      },
      "RF Power": {
        "type": "String",
        "readOnly": true
      },
      "Frequency": {
        "type": "String",
        "readOnly": true
      },
      "RF Group": {
        "type": "String",
        "readOnly": true
      },
      "RF Channel": {
        "type": "String",
        "readOnly": true
      },
      "Diversity Antenna": {
        "type": "String",
        "readOnly": true
      },
      "RF Level": {
        "type": "String",
        "readOnly": true
      },
        "RF Level Peak": {
        "type": "Float",
        "ui": "slider" ,
        "min" : 0 ,
        "max" : 115 ,
        "readOnly": true
      },
      "Audio Level": {
        "type": "String",
        "readOnly": true
      },
      "Audio Level Peak": {
        "type": "Float",
        "ui": "slider" ,
        "min" : -50 ,
        "max" : -0.5 ,
        "readOnly": true
      },
    
      "Battery Runtime": {
        "type": "String",
        "readOnly": true
      },
      "Battery Type": {
        "type": "String",
        "readOnly": true
      },     
      "Battery Bars": {
        "type": "Enum",
        "options": {
          "unknown": "255",
         "5/5 full": "5",
          "4/5 bars": "4",
          "3/5 bars": "3",
          "2/5 bars": "2",
          "1/5 bars": "1",
          "0/5 alerte !": "0"  },
        "readOnly": true },
        
         "Battery Charge": {
        "type": "Float",
        "ui": "slider" ,
        "min" : 0 ,
        "max" : 5 ,
        "readOnly": true }
       }
   
  },



  "commands": {
    "Flash receiver": {
      "menu": "",
      "callback": "setFlashing",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 0,
          "max": 2,
          "default": 0,
          "description": "use 0 to flash the whole receiver"
        }
      }
    },
    "set Device Identifier": {
      "menu": "",
      "callback": "setDeviceID",
      "parameters": {
        "Identifier": {
          "type": "String"
        }
      }
    },
    "set Channel Name": {
      "menu": "",
      "callback": "setChannelName",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 1,
          "max": 2,
          "default": 1
        },
        "new Name": {
          "type": "String"
        }
      }
    },
    "set Audio Gain": {
      "menu": "",
      "callback": "setAudioGain",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 1,
          "max": 2,
          "default": 1
        },
        "Gain": {
          "type": "Integer",
          "min": -18,
          "max": 42,
          "default": 0
        }
      }
    },
    "increase Audio Gain": {
      "menu": "",
      "callback": "incAudioGain",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 1,
          "max": 2,
          "default": 1
        },
        "Gain increase": {
          "type": "Integer",
          "min": 0,
          "max": 10,
          "default": 1
        }
      }
    },
    "decrease Audio Gain": {
      "menu": "",
      "callback": "decAudioGain",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 1,
          "max": 2,
          "default": 1
        },
        "Gain reduction": {
          "type": "Integer",
          "min": 0,
          "max": 10,
          "default": 1
        }
      }
    },
    "Update all Values": {
      "menu": "",
      "callback": "getAll"
    },
    "Set Meter Rate": {
      "menu": "",
      "callback": "setMeterRate",
      "parameters": {
        "Channel": {
          "type": "Integer",
          "min": 1,
          "max": 2,
          "default": 1
        },
        "Rate": {
          "type": "Enum",
          "options": {
            "no Updates": "00000",
            "very slow (15sec)": "15000",
            "slow (5sec)": "05000",
            "medium (2,5sec)": "02500",
            "fast (1sec)": "01000",
            "very fast (0.1sec)": "00100"
          }
        }
      }
    }
  }
}
